            <td class="sequence_<%= level.get_level_and_wgu(level) %>">
              <% if level.get_sub_levels.blank? && level.wgus.blank? %>
                <i class="fa fa-caret-up" style="font-size: 24px;margin-top: 24px;"></i>
              <% else %>
                  <i class="fa fa-caret-down" style="font-size: 24px;margin-top: 24px;"></i>
              <% end %>
            </td>

          <td style="text-align: center; vertical-align: middle">
            <div class="company-img dropdown">
              <span class="dropdown-toggle" data-toggle="dropdown" href="#" style="font-size: 18px;">
                <i class="fa fa-bars" style="cursor: pointer; font-size: 24px;"></i>
              </span>

              <ul class="dropdown-menu dropdown-user">
