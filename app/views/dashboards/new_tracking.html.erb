<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Tracking</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_2' %>">Home</a>
      </li>
      <li class="active">
        <strong>Tracking</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
