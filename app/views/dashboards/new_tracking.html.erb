<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Data Tables</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
      </li>
      <li>
        <a>Tables</a>
      </li>
      <li class="active">
        <strong>Data Tables</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Basic Data Tables example with responsive plugin</h5>

          <div class="ibox-tools">

            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>


            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>

            <ul class="dropdown-menu dropdown-user">
              <li>
                <a href="#">Config option 1</a>
              </li>
              <li>
                <a href="#">Config option 2</a>
              </li>
            </ul>

            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>

          </div>
        </div>
        <div class="ibox-content">

          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
            <tr>
              <th>Name</th>
              <th>Header1</th>
              <th>Header2</th>
              <th>Header3</th>
              <th>Header4</th>
            </tr>
            </thead>

            <tbody class = "table_order">
            <% @all_levels.each do |level| %>

                <tr class="gradeX" id = "sub_level_<%= level.id %>" value = "<%= level.id %>" >
                  <td><%= level.name %></td>
                  <td>
                    Internet
                    Explorer 4.0
                  </td>
                  <td>Win 95+</td>
                  <td class="center">4</td>
                  <td class="center">X</td>
                </tr>




            <%end%>

            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>




<script>
  $(document).ready(function(){
     $(".table_order tr").one('click',function(){
         var level_id = $(this).attr('value');
         var url = "/getting_sub_levels/" + level_id ;
         $.ajax({
             type: "GET",
             url: url
         });
     });
  });
</script>